<div class="header">
  <h1>Gerenciamento de Boletos</h1>
  <%= link_to 'Novo Boleto', new_bank_slip_path, class: "action-button" %>
</div>

<% if notice %>
<p class="notice-container"><%= notice %></p>
<% end %>

<div class="container">
  <h2 class="sub-title">Boletos</h2>
  <div class="slips-container">
    <table>
      <tr>
        <th>Valor</th>
        <th>Data de Vencimento</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>Estado</th>
        <th>Cidade</th>
        <th>CEP</th>
        <th>Endereço</th>
        <th>Bairro</th>
        <th>Ações</th>
      </tr>
      <tr>
        <% @bank_slips.each do |bank_slip| %> <%= render 'bank_slip', bank_slip:
        bank_slip %> <% end %>
      </tr>
    </table>
  </div>
</div>
